<p id="notice"> <%=  notice %></p>

<div class="index">
	<h1>Books</h1>
	<table>
		<thead>
			<tr>
				<th>Title</th>
				<th>Body</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<% @books.each do |book| %>
		<tbody>
			<tr>
				<td class="index-book-title"> <%= book.title %></td>
				<td class="index-book-body"> <%= book.body %></td>
				<td class="index-links">
				  <span class="link"><%= link_to "Show",book_path(book.id)%></span>
				  <span class="link"><%= link_to "Edit",edit_book_path(book.id) %></span>
				  <span class="link"><%= link_to "Destroy",book_path(book.id),method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></span>
				</td>
		  </tr>
		</tbody>
		<% end %>
  </table>
</div>

<h2>New book</h2>
<%= form_for(@book) do |f| %>
<%= render 'layouts/abc', book: f.object %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>